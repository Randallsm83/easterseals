doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", type="text/css", href="/stylesheets/style.css")
    title Setup Form
  body
    .container
        form(action="/setup", method="POST")
          label(for="sessionId") Session ID:
          input(type="text", name="sessionId", id="sessionId", required)
          br
          label(for="buttonActive") Active Button:
          select(name="buttonActive", id="buttonActive", required)
            option(value="left") Left
            option(value="right") Right
          br
          label(for="pointsAwarded") Points Awarded:
          input(type="number", name="pointsAwarded", id="pointsAwarded", required)
          br
          label(for="clicksNeeded") Clicks Before Points are Awarded:
          input(type="number", name="clicksNeeded", id="clicksNeeded", required)
          br
          label(for="startingPoints") Starting Points:
          input(type="number", name="startingPoints", id="startingPoints", required)
          br
          label(for="sessionLength") Session Length (in seconds):
          input(type="number", name="sessionLength", id="sessionLength", required)
          br
          button(type="submit") Submit

